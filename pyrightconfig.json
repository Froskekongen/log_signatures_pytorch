{
    "include": [
        "src",
        "tests",
        "benchmarks",
        "scripts"
    ],
    "exclude": [
        "**/__pycache__",
        "**/.venv",
        "**/node_modules"
    ],
    "venvPath": ".",
    "venv": ".venv",
    "pythonVersion": "3.13",
    "typeCheckingMode": "basic",
    "reportMissingImports": true,
    "reportMissingTypeStubs": false,
    "pythonPlatform": "Linux"
}

